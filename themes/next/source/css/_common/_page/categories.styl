.category-all-page {
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50px;
  margin-bottom: 50px;

  .category-all-title {
    font-family $font-family-monospace;
    font-size 20px;
    text-align: center;
    margin-bottom 20px;
  }

  .category-all { margin-top: 20px; }

  .category-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .category-list-item {
    text-align center;
    font-size: 18px;
    display: list-item;
    margin: 10px;
  }

  .category-list-count {
    color: $grey;
    &:before {
      display: inline;
      content: " ("
    }
    &:after {
      display: inline;
      content: ") "
    }
  }
}
