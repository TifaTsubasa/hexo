.about-card h1 {
  margin: 60px;font-family: PingFangSC-Semibold;font-size: 20px;color: rgba(145,167,208,0.80);line-height: 28px;
}
.about-card h3 {
  font-family: PingFangSC-Semibold;font-size: 22px;color: #4A4A4A;line-height: 30px;max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}
.about-card ul {
  list-style: none;padding: 0px 20px;max-width: 350px;
  margin-left: auto;
  margin-right: auto;
}
.about-card li {
  height: 25px;font-family: PingFangSC-Semibold;font-size: 18px;color: rgba(74,73,74,0.50);line-height: 25px;
}
.about-lag p {
  padding: 0px 20px;
  height: 25px;font-family: PingFangSC-Semibold;font-size: 18px;color: rgba(74,73,74,0.50);line-height: 25px;max-width: 350px;
  margin-left: auto;
  margin-right: auto;
}
.about-card {
  margin-left: auto;
  margin-right: auto;
  max-width: 600px;
  @media (max-width: 767px) {
    width: 100%;
  }
  /*height: 1200;*/
  background: #FFFFFF;
  border: 1px solid rgba(150,150,150,0.10);
  box-shadow: inset -1px -1px 2px 0px rgba(168,163,163,0.50);
}
.about-main {
  text-align: center;padding-top: 60px;
}
.about-line {
  /* Line: */
  border: 1px solid rgba(151,151,151,0.15);
}
.about-info {
  margin: 50px 10px;
  text-align: center;
}
.about-skill {
  text-align: left;
}
.about-lag {
  text-align: left;
  margin-top: 50px;
}
.about-header {
  width: 175px;height: 175px;border-radius: 50%;
}
.about-footer {
  font-family: PingFangSC-Semibold;font-size: 14px;color: rgba(74,73,74,0.40);line-height: 20px;text-align: center;float: bottom;margin-top: 200px;
}
